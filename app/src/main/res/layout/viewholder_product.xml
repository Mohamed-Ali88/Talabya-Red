<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_200sdp"
    android:background="@color/white"
    android:elevation="@dimen/_20sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_20sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/shopping" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_bold"
            android:text="جمسمنة نباتي رابحة 600 جمجمسمنة نباتي رابحة 600 جمسرابحة 600 "
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_8sdp" />
        <TextView
            android:layout_marginRight="@dimen/_8sdp"
            android:id="@+id/product_amount"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_bold"
            android:text="---------"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/discount_cons"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#3C3C3B"
                android:rotation="12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#3C3C3B"
                android:rotation="-12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/product_price_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_bold"
                android:text="2800 ج م"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/product_price_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_bold"
            android:text="2200 ج م"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_9sdp" />


    </LinearLayout>


    <Button
        android:id="@+id/add_product"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/_2sdp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/tajawal_bold"
        android:text="اضف"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:visibility="visible"
        card_view:cornerRadius="@dimen/_16sdp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sale_tape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_45ssp"
            android:layout_height="@dimen/_45ssp"
            android:src="@drawable/corner_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
