<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OTP_activity">

    <LinearLayout
        android:id="@+id/fads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40ssp"
        android:background="@color/white"
        android:elevation="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_product_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center|center_vertical"
            android:text="التاكد من الرقم المحمول"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:rotationY="180"
            android:src="@drawable/ic_baseline_arrow_back_24" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_14sdp"
        android:fontFamily="@font/tajawal_medium"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="يرجي ادخال 6 ارقام التي ارسلناها من ايسار الى اليمين"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fads" />

    <TextView
        android:id="@+id/counterOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:fontFamily="@font/tajawal_bold"
        android:letterSpacing="0.1"
        android:text="00:00"
        android:paddingTop="20dp"
        android:textColor="@color/red"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/start_signUp_btn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/tajawal_bold"
        android:text="تحقق"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterOTP"
        card_view:cornerRadius="@dimen/_50sdp" />

    <Button
        android:id="@+id/faceBtn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:backgroundTint="@color/dim_foreground_material_dark"
        android:clickable="false"
        android:fontFamily="@font/tajawal_bold"
        android:text="تحقق"
        android:textAllCaps="false"
        android:textColor="@color/bright_foreground_disabled_material_light"
        android:textSize="@dimen/_14ssp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterOTP"
        card_view:cornerRadius="@dimen/_50sdp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <EditText
            android:id="@+id/ed1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/color_crusor_2"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/ed2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/color_crusor_2"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/ed3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/color_crusor_2"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/ed4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/color_crusor_2"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/ed5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/color_crusor_2"
            android:textSize="@dimen/_18sdp" />

        <EditText
            android:id="@+id/ed6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/color_crusor_2"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>