<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/product_img_horizontal"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/shopping" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:orientation="vertical">`

            <TextView
                android:id="@+id/product_title_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="start"
                android:text="جمسمنة نباتي رابحة 600 جمجمسمنة نباتي رابحة 600 جمجمسمنة نباتي رابحة 600 جم"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/product_amount_horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="------"
                        android:layout_gravity="right"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/discount_cons_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:visibility="gone">

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="1.8px"
                            android:background="#3C3C3B"
                            android:rotation="12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="1.8px"
                            android:background="#3C3C3B"
                            android:rotation="-12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/product_price_sale_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tajawal_bold"
                            android:text="2800 ج م"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/product_price_basic_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="2200 ج م"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <Button
                    android:id="@+id/add_product_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="اضف"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    card_view:cornerRadius="@dimen/_16sdp" />




            </LinearLayout>


        `</LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sale_tape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_45ssp"
            android:layout_height="@dimen/_45ssp"
            android:src="@drawable/corner_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
