<resources>
    <!-- Base application theme. -->
    <style name="Theme.EngShrief" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavDrawerTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic_variable_font_wght</item>
    </style>

    <style name="NavDrawerTextStyleTablet" parent="android:Widget.TextView">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic_variable_font_wght</item>
    </style>

    <style name="NavDrawerTextStyleSmall" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic_variable_font_wght</item>
    </style>


    <style name="Theme.EngShrief.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EngShrief.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EngShrief.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    TextInputLayout   -->
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/noto_kufi_arabic_variable_font_wght</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic_variable_font_wght</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.009375</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darker_gray</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/tajawal_bold</item>
        <item name="stTextSize">@dimen/_10sdp</item>
        <item name="stColorBackground">@color/colorAccent</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">@dimen/_1sdp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconEnd">@drawable/cart_small</item>
        <item name="stLength">LONG</item>
        LONG or SHORT
        <item name="stGravity">center</item>
        top or center
        <item name="stRadius">@dimen/_12sdp</item>
    </style>


</resources>